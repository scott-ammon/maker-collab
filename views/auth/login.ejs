<div class="row">
  <div class="col s12 m6 offset-m3 l4 offset-l4">
  	<h3 class="center">Sign In</h3>
    <form class="display-box" action="/auth/login" method="POST">
      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>

      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
      </div>

      <input class="btn btn-primary right" type="submit">
    </form>
     <br>
    <a href="/auth/signup">Not a member? Sign up!</a>
  </div>
</div>
