<div class="row">
	<h3 class="center sign-in">Sign In</h3>
  <div class="col s12 m6 offset-m3 l6 offset-l3 display-box">
  	
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>

      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
      </div>

      <button class="btn btn-primary blue right" type="submit">Sign In</button>
    </form>
     <br>
  </div>
  
</div>

<div class="row">
	<a class="col s12 m6 offset-m3 l6 offset-l3 center black-text" href="/auth/signup">Not a member? Sign up!</a>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>