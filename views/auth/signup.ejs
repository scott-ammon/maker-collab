<div class="rows signup">
  <h3 class="center">Sign up to start creating!</h3>
  <div class="signup-box">
    <div class="flex site-description">
      <h5>Find your next project with us.</h5><br>
      <h6>Maker-Collab can help you:</h6>
      <ul class="list">
        <li>- Find hobby electronics projects near you</li>
        <li>- List your expertise so other makers can find you</li>
        <li>- Post a project idea</li>
      </ul>
    </div>
    <div class="flex">
      <form action="/auth/signup" method="POST">
        <div class="form-group">
          <label for="authName">Name</label>
          <input id="authName" class="input-field" type="text" name="name">
        </div>
        <div class="form-group">
          <label for="authEmail">Email</label>
          <input id="authEmail" class="input-field" type="email" name="email">
        </div>
        <div class="form-group">
          <label for="authPassword">Password</label>
          <input id="authPassword" class="input-field" type="password" name="password">
       </div>
       <br>
       <button class="btn btn-primary right" type="submit">Create Account</button>
      </form>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>