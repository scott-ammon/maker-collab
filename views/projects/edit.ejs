<h3>Edit Project:</h3>

<form action="/projects/<%= project.id %>" method="POST" class="edit-form">
  <div class="form-group">
    <label for="proj-title">Project Title</label>
    <input id="proj-title" class="form-control" type="text" name="title" value="<%= project.title %>" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" class="form-control" type="text" name="description" value="<%= project.description %>" required></textarea>
  </div>

  <div class="form-group">
    <label for="code">Code Snippets</label>
    <textarea id="code" class="form-control" type="text" name="code" value="<%= project.code %>">
    </textarea>
  </div>

  <div class="form-group">
    <label for="location">Location</label>
    <input id="location" class="form-control" type="text" name="location" value="<%= project.location %>">
  </div>

  <button class="btn btn-primary right" type="submit">Save Changes</button>
</form>